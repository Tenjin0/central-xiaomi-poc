{
  "name": "central-xiaomi-poc",
  "version": "1.0.0",
  "description": "a central to handle xiaomiHome door state",
  "main": "index.js",
  "scripts": {
    "start": "pm2-docker start ecosystem.config.js",
    "dev": "npm i sqlite3 && pm2-docker start ecosystem.config.js --watch --web",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:migrate": "./node_modules/sequelize-cli/lib/sequelize  db:migrate --config ./config.js --migrations-path ./database/migrations/",
