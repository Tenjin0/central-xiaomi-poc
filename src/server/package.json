    "socket.io-client": "^2.1.1",
    "sqlite3": "^4.0.2",
    "ws": "^6.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/socket.io-client": "^1.4.32",
    "@types/ws": "^6.0.0",
    "sequelize-cli": "^4.1.1",
    "typescript": "^3.0.1"
  }
